{
  "manifest_version": 3,
  "name": "block-subtitle",
  "description": "字幕遮挡工具",
  "version": "0.0.2",
  "action": {
    "default_icon": {
      "16": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "host_permissions": ["<all_urls>"]
}
